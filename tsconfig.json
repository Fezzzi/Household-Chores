{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "sourceMap": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "clientSrc/*": [ "code/client/src/*" ],
      "serverSrc/*": [ "code/server/src/*" ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "code"
  ]
}
